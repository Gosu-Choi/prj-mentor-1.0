{
  "name": "mentor",
  "displayName": "MENTOR",
  "description": "MENTOR",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mentor.startTour",
    "onCommand:mentor.nextStep",
    "onCommand:mentor.previousStep",
    "onCommand:mentor.stopTour",
    "onView:mentor.intentView",
    "onView:mentor.tourSidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mentor",
          "title": "MENTOR",
          "icon": "resources/mentor.svg"
        }
      ]
    },
    "views": {
      "mentor": [
        {
          "id": "mentor.intentView",
          "name": "Intent",
          "type": "webview"
        },
        {
          "id": "mentor.tourSidebar",
          "name": "Tour",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mentor.startTour",
        "title": "MENTOR: Start Tour"
      },
      {
        "command": "mentor.nextStep",
        "title": "MENTOR: Next Step"
      },
      {
        "command": "mentor.previousStep",
        "title": "MENTOR: Previous Step"
      },
      {
        "command": "mentor.stopTour",
        "title": "MENTOR: Stop Tour"
      },
      {
        "command": "mentor.openSidebar",
        "title": "MENTOR: Open Sidebar"
      },
      {
        "command": "mentor.clearExplanations",
        "title": "MENTOR: Clear Explanations"
      },
      {
        "command": "mentor.toggleBackgroundTour",
        "title": "MENTOR: Toggle Background Tour"
      },
      {
        "command": "mentor.showDebugInfo",
        "title": "MENTOR: Show Debug Info"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@vscode/tree-sitter-wasm": "^0.3.0",
    "dotenv": "^17.2.3",
    "openai": "^6.16.0",
    "vis-network": "^10.0.2",
    "web-tree-sitter": "^0.26.3"
  }
}
